    <script>
        $("body").on("click", "#save", function () {
            //Loop through the Table rows and build a JSON array.
            $("#save").hide();

            var jobs = new Array();
            $(" .modal-body").each(function () {
                var row = $(this);
                var job = {};
                job.J_Description = row.find("textarea").eq(0).val();
                job.J_Title = row.find("select").eq(0).val();
                job.J_location = row.find("input").eq(1).val();
                job.J_CompanyIndustry = row.find("input").eq(2).val();
                job.J_CompanyType = row.find("input").eq(3).val();
                job.J_JobRole = row.find("input").eq(4).val();
                job.ImplementType = row.find("input").eq(5).val();
                job.MonthlySalaryRange = row.find("input").eq(6).val();
                job.NumberOfVacancies = row.find("input").eq(7).val();
                job.Careerlevel = row.find("input").eq(8).val();
                job.YearsOfExperience = row.find("input").eq(9).val();
                job.Degree = row.find("input").eq(10).val();
                job.Address = row.find("input").eq(11).val();
                jobs.push(job);
            });
            $.ajax({
                method: "POST",
                url: "/CompanyCV/JobAlertSaveData",
                data: JSON.stringify(jobs),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function () {
                    alert("Data Saved.");
                    $("#save").show();

                }
            }); 
        });

        function ShowPersoanlView(Id) {
            $.ajax({
                type: "GET",
                success: window.location.href = "/PersonalCV/PersonalView?id=" + Id
            })
        }
    </script>

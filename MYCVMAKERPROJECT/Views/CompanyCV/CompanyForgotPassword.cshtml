@model MYCVMAKERPROJECT.ViewModel.CompanyViewModel
@{
    ViewData["Title"] = "CompanyForgotPassword";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="utf-8">
    <title>Personal Portfolio Website</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script> -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- main css -->
    <link rel="stylesheet" type="text/css" href="~/Content/CompanyChangePasswordstyle.css">


</head>
<body class="dark">


    <div class="notifi-box" id="box">
        <h2>Notifications <span>@Model.Nofitication.Where(x => x.CompanyId == Model.Company.Id).Count()</span></h2>
        @foreach (var item in Model.Nofitication)
        {
            <div class="notifi-item unread" onclick="ShowPersoanlView(@item.PersonalId);">
                <img src="@item.Personal.P_Image" alt="img">
                <div class="text">
                    <h4>@item.Personal.P_FirstName @item.Personal.P_LastName</h4>
                    <p> @item.Personal.P_JobTitle</p>
                </div>
            </div>
        }

    </div>
    <!-- navigation menu end -->
    <!-- change password section end -->

    <section class="change-passwrod section" id="change-passwrod">
        <!-- navigation menu start -->
        <nav class="navbar navbar-expand-xl navbar-dark">
            <a href="" class="navbar-brand"><img src="~/img/Logo.png" alt="logo"></a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
                <div class="navbar-nav ml-auto">
                    <a href="#home" class="nav-item nav-link active"><i class="fa fa-home"></i><span>Home</span></a>
                    <a href="#portfolio" class="nav-item nav-link"><i class="fa fa-gears"></i><span>Projects</span></a>
                    <a href="#contact" class="nav-item nav-link"><i class="fa fa-briefcase"></i><span>Contact</span></a>
                    <a class="nav-item nav-link" onclick="toggleNotifi()"><i class="fa fa-bell"><span class="number">@Model.Nofitication.Where(x => x.CompanyId == Model.Company.Id).Count()</span></i><span>Notifications</span></a>

                    <div class="nav-item dropdown">
                        <a href="#" data-toggle="dropdown" class="nav-item nav-link dropdown-toggle user-action"><img src="@Model.Company.C_logo" class="avatar" alt="Avatar"> @Model.Company.C_Name <b class="caret"></b></a>
                        <div class="dropdown-menu">
                            <a href="@Url.Action("CompanyForgotPassword","CompanyCV",null)" class="dropdown-item"><i class="fa fa-lock"></i> Chenge Password</a>
                            <a href="" class="dropdown-item"><i class="fa fa-sliders"></i> Edit Data</a>
                            <div class="divider dropdown-divider"></div>
                            <a href="@Url.Action("Login","Users",null)" class="dropdown-item"><i class="material-icons">&#xE8AC;</i> Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row">
                <div class="section-title">
                    <h2 data-heading="Change Password"></h2>
                </div>
            </div>

            <div class="row middle">
                <div class="change-form">
                    <form method="post">
                        <div class="row">
                            <div class="title1">
                                <h2>Send New Password</h2>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="w-100">
                                <div class="input-group outer-shadow hover-in-shadow">
                                    <span><i class="fa fa-envelope" aria-hidden="true"></i></span>
                                    <input type="text" placeholder="Email" class="input-control" name="email" autocomplete="off">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="submit-btn">
                                <input type="submit" value="Send" class="btn-2 outer-shadow hover-in-shadow">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Scripts/ChangePasswordmain.js"></script>
</body>
</html>



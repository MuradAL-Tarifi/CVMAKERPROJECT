
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="utf-8">
    <title>ForgotPassword</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">



    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <!-- main css -->
    <link rel="stylesheet" type="text/css" href="~/Content/ForgotPasswordstyle.css">


</head>
<body class="dark">

    <!-- Header Start -->
    <nav class="navbar navbar-expand-lg">
        <a href="#" class="navbar-brand"><img src="~/img/Logo.png" alt="logo"></a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Collection of nav links, forms, and other content for toggling -->
        <div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
            <div class="navbar-nav">
                <a href="#" class="nav-item nav-link">Home</a>
                <div class="nav-item dropdown">
                    <a href="#" data-toggle="dropdown" class="nav-item nav-link dropdown-toggle">Why us</a>
                    <div class="dropdown-menu">
                        <a href="#" class="dropdown-item">Web Design</a>
                        <a href="#" class="dropdown-item">Web Development</a>
                        <a href="#" class="dropdown-item">Graphic Design</a>
                        <a href="#" class="dropdown-item">Digital Marketing</a>
                    </div>
                </div>
                <a href="#" class="nav-item nav-link active">Team</a>
                <a href="#" class="nav-item nav-link active">Clients Saying</a>
                <a href="#" class="nav-item nav-link">Contact</a>

            </div>

            <div class="navbar-nav ml-auto action-buttons">
                @using (Html.BeginForm("GoToPersonalReg", "Users", FormMethod.Get, new { id = "GoToPersonalRegForm" }))
                {
                    <a href="javascript:document.getElementById('GoToPersonalRegForm').submit()" id="company" class="btn btn-1 nav-item  sign-up-btn nav-link mr-4 ">For Employers</a>
                }
                @using (Html.BeginForm("GoToLogin", "Users", FormMethod.Get, new { id = "GoToLoginForm" }))
                {
                    <a href="javascript:document.getElementById('GoToLoginForm').submit()" class="btn btn-1 nav-item sign-up-btn nav-link mr-4">&nbsp;&nbsp; Login &nbsp;&nbsp;</a>
                }
                @using (Html.BeginForm("GoToComapnyReg", "Users", FormMethod.Get, new { id = "GoToComapnyRegForm" }))
                {
                    <a href="javascript:document.getElementById('GoToComapnyRegForm').submit()" class="btn btn-1  nav-item sign-up-btn">Sign up</a>
                }
            </div>
        </div>
    </nav>
    <!-- Header end -->
    <!-- change password section end -->

    <section class="change-passwrod section" id="change-passwrod">
        <div class="container">
            <div class="row middle">
                <div class="change-form">
                    <form>
                        <div class="row">
                            <div class="title1">
                                <h2>Forgot your Password?</h2>
                                <p>Please enter your email address and we'll send you instructions on how to reset your password</p>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="w-100">
                                <div class="input-group outer-shadow hover-in-shadow">
                                    <span><i class="fa fa-envelope" aria-hidden="true"></i></span>
                                    <input type="text" placeholder="Email" class="input-control hover-in-shadow" name="email" autocomplete="off">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="submit-btn">
                                @using (Html.BeginForm("ForgotPassword", "Users", FormMethod.Post, new { id = "ForgotPasswordForm" }))
                                {
                                    <button type="submit" class="btn btn-1 outer-shadow hover-in-shadow" onclick="javascript:document.getElementById('ForgotPasswordForm').submit()" >Get New Password</button>
                                }
                                @ViewBag.Message
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


</body>
</html>



